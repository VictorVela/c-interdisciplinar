}

<h2>Create com Jquery e JavaScript</h2>

<h4>Administrador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeAdministrador" class="control-label"></label>
                <input asp-for="NomeAdministrador" class="form-control" />
